             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="NavigationSample.Views.Page1"
             Title="Page 1">

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <BoxView BackgroundColor="Red"
